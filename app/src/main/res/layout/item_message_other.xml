<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/screen_padding"
    android:paddingVertical="@dimen/item_spacing">

    <TextView
        android:id="@+id/textMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@drawable/bubble_other"
        android:maxWidth="280dp"
        android:text="Hej!"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/c_on_surface"
        android:paddingHorizontal="@dimen/section_spacing"
        android:paddingVertical="@dimen/item_spacing"
        android:lineSpacingExtra="1dp" />

</FrameLayout>


