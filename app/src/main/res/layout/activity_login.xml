<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:background="@color/c_bg"
    android:paddingTop="@dimen/screen_padding"
    android:paddingBottom="@dimen/screen_padding">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/screen_padding"
        android:paddingEnd="@dimen/screen_padding">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/c_on_surface"
                android:layout_marginBottom="@dimen/item_spacing"
                android:gravity="center"/>

            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_subtitle"
                android:textSize="@dimen/text_small"
                android:textColor="@color/c_on_surface_muted"
                android:layout_marginBottom="@dimen/section_spacing"
                android:gravity="center"/>

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:hint="@string/email"
                android:paddingHorizontal="@dimen/screen_padding"
                android:background="@drawable/bg_input"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="@dimen/item_spacing"
                android:textColor="@color/c_on_surface"
                android:textColorHint="@color/c_on_surface_muted"/>

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:hint="@string/password"
                android:paddingHorizontal="@dimen/screen_padding"
                android:background="@drawable/bg_input"
                android:inputType="textPassword"
                android:layout_marginBottom="@dimen/section_spacing"
                android:textColor="@color/c_on_surface"
                android:textColorHint="@color/c_on_surface_muted"/>

            <Button
                android:id="@+id/loginButton"
                style="@style/PrimaryButton"
                android:text="@string/login"/>

            <Button
                android:id="@+id/registerButton"
                style="@style/PrimaryButton"
                android:text="@string/register"/>

            <Button
                android:id="@+id/googleButton"
                style="@style/PrimaryButton"
                android:text="@string/login_with_google"/>

            <ProgressBar
                android:id="@+id/loginProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/section_spacing"
                android:visibility="gone"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
