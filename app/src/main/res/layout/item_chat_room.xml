<?xml version="1.0" encoding="utf-8"?>
<!-- Chat room row item -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/screen_padding"
    android:layout_marginVertical="@dimen/item_spacing"
    app:cardCornerRadius="@dimen/button_radius"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/section_spacing">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/room_title_placeholder"
            android:textSize="@dimen/text_normal"
            android:textStyle="bold"
            android:textColor="@color/c_on_surface"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textYouBadge" />

        <TextView
            android:id="@+id/textYouBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/you_badge"
            android:textSize="@dimen/text_small"
            android:textStyle="bold"
            android:textColor="@color/c_on_surface"
            android:paddingHorizontal="@dimen/section_spacing"
            android:paddingVertical="@dimen/item_spacing"
            android:visibility="gone"
            app:layout_constraintBaseline_toBaselineOf="@id/textTitle"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textMembers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/members_placeholder"
            android:textSize="@dimen/text_small"
            android:textColor="@color/c_on_surface_muted"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/textTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/item_spacing" />

        <TextView
            android:id="@+id/textDeleteHint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/long_press_to_delete"
            android:textSize="12sp"
            android:textColor="@color/c_on_surface_muted"
            android:visibility="gone"
            android:layout_marginTop="@dimen/item_spacing"
            app:layout_constraintTop_toBottomOf="@id/textMembers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

